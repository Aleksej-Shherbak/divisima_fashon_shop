<!-- Product filter section -->
<section class="product-filter-section">
    <div class="container">
        <div class="section-title">
            <h2>BROWSE TOP SELLING PRODUCTS</h2>
        </div>
        <ul class="product-filter-menu">
            @foreach (var category  in Model.TopSellingProductsCategory)
            {
                <li>
                    <a href="#">@category.Name</a>
                </li>
            }
        </ul>
        <div class="row">
            @foreach (var topSellingProduct  in Model.TopSellingProducts)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="product-item">
                        <div class="pi-pic">
                            @if (topSellingProduct.OnSale)
                            {
                                <div class="tag-sale">ON SALE</div>
                            }
                            <img src="@topSellingProduct.ImagePath" alt="@topSellingProduct.Name">
                            <div class="pi-links">
                                <a href="#" class="add-card">
                                    <i class="flaticon-bag"></i><span>ADD TO CART</span>
                                </a>
                                <a href="#" class="wishlist-btn">
                                    <i class="flaticon-heart"></i>
                                </a>
                            </div>
                        </div>
                        <div class="pi-text">
                            <h6>$@topSellingProduct.Price</h6>
                            <p>@topSellingProduct.Brand.Name  @topSellingProduct.Name</p>
                        </div>
                    </div>
                </div>
            }
            
        </div>
        <div class="text-center pt-5">
            <button class="site-btn sb-line sb-dark">LOAD MORE</button>
        </div>
    </div>
</section>
<!-- Product filter section end -->


